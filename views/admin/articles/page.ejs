<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/homenavbar.ejs") %>
<body>
  <div class="container">
    <hr>
    <% result.articles.rows.forEach(article=>{ %>
      <div class="card">
        <div class="card-header">
          <h4><%= article.title %></h4>
        </div>
        <br>

        <div class="card-body">
          <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
        </div>
        <br>
      </div>

    <%}) %>

    <div class="row">
      <div class="col col-12">
        <% if (result.page > 1) { %>
        <a href="/articles/page/<%= result.page - 1 %>" style="float: left;"> <<< Prev </a>
        <% } %>
        
        <% if (result.next) { %>
          <a href="/articles/page/<%= result.page +1 %>" style="float: right;"> Next >>> </a>
        <% } %>
      </div>
      <hr>
    </div>
    


  </div>
</body>
<%- include ('../../partials/footer.ejs') %>